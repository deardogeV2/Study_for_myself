<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.LearnForDsl.dao.HotelDao">
    <resultMap id="orderMap" type="com.example.LearnForDsl.domain.HotelInfo">
        <result column="star_name" property="starName"/>
    </resultMap>
    <select id="selectAll" resultType="com.example.LearnForDsl.domain.HotelInfo" resultMap="orderMap">
        select *
        from tb_hotel;
    </select>

    <select id="selectOneById" resultType="com.example.LearnForDsl.domain.HotelInfo" resultMap="orderMap">
        select *
        from tb_hotel
        WHERE id = #{id}
    </select>
</mapper>